
<%= simple_form_for(@requirement, :url => children_requirement_path, :method => :post) do |f| %> 

	<%= f.input :parent_id, as: :hidden %>	

			<%= f.label :name %>
			<%= f.text_field :name %> 

			<%= f.label :description %>
			<%= f.text_area :description %> 

			<%= f.label :minimum %>
		 	<%= f.input_field :minimum, collection: 1..20 %>

		 	<%= f.label :most_likely %>
			<%= f.input_field :most_likely, collection: 1..20 %>

			<%= f.label :maximum %>
			<%= f.input_field :maximum, collection: 1..20 %>

		<%= f.submit "Create Requirement"%> 
	

<% end %>